<div>
  <p>
    <%= image_tag post.image.variant(resize: "400x400") %>
  </p>
  <p>
    <strong>Caption:</strong>
    <%= post.caption %>
  </p>
  <%= link_to 'Show', post_path(post) %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Delete', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</div>